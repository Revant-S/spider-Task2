<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/headTag.ejs") %>
        <style>
          body {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    margin: 0;
    padding: 0;
}

.wholePage {
    display: flex;
    flex-direction: column;
    height: 100vh;
    width: 100%;
}

.outer {
    display: flex;
    height: 100vh;
    overflow: hidden;
}

.bookSpace {
    display: flex;
    flex-direction: column;
    padding: 2rem;
    width: 100%;
    height: 100%;
    overflow-y: auto; /* Ensure scrolling if content overflows */
}

.bookSpace2 {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* Exactly 3 cards per row */
    gap: 2%; /* Space between cards */
    padding: 2rem;
    width: 100%;
    height: 100%;
    overflow-y: auto; /* Ensure scrolling if content overflows */
    box-sizing: border-box; /* Include padding in width and height calculations */
}

.card {
    display: flex;
    flex-direction: column;
    border: 1px solid #ddd;
    border-radius: 8px;
    background-color: #fff;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    width: 100%; /* Full width of grid cell */
    height: 80vh; /* Fixed height for cards */
    box-sizing: border-box; /* Include padding and border in width */
}

.card-img-top {
    width: 100%;
    height: 50%; /* Half of the card height to accommodate image */
    object-fit: cover; /* Ensure image covers the area without distortion */
}

.card-body {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    height: 50%; /* The remaining height for card body */
}

.card-title {
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
}

.card-text {
    margin-bottom: 1rem;
    font-size: 1rem;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.btn-container {
    display: flex;
    gap: 1rem; /* Space between buttons */
    margin-top: auto; /* Push buttons to the bottom of the card */
}

.btn-container .btn {
    flex: 1; /* Make buttons take up full width of the container */
}

h1 {
    text-align: center;
    color: #333;
    margin: 2% 0;
    font-weight: bold;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
}

.link2 {
    text-decoration: none;
    color: black;
}

        </style>
        <link rel="stylesheet" href="/public/cssFiles/modalAddBooks.css">
        <link rel="stylesheet" href="/public/cssFiles/nav.css">
        <link rel="stylesheet" href="/public/cssFiles/sideBar.css">
</head>

<body>
    <div class="outer">
        <%- include("./partials/sideBar.ejs") %>
            <div class="wholePage">
                <%- include("./partials/navBar.ejs") %>
                    <%- include("./partials/addBookModel.ejs") %>
                        <h1>Your Books</h1>
                      
                            <div class="bookSpace">
                                <div class="upper">
                                </div>
                                <div class="bookSpace2">
                                    <% locals.user.books.forEach(element=> { %>
                                        <div class="card adjust">

                                            <img src="<%= element.imageLink %>" class="card-img-top cardImage"
                                                alt="Book Title">


                                            <div class="card-body">

                                                <h5 class="card-title">
                                                    <%= element.title %>
                                                </h5>

                                                <p class="card-text ptag">
                                                    <%= element.description %>
                                                </p>

                                                <div class="btn-container">
                                                    <!-- View Details Button -->
                                                    <a href="/books/viewBook/<%= element._id %>"
                                                        class="btn btn-primary">View Details</a>


                                                    <a href="#" class="btn btn-danger deleteBtn"
                                                        data-bookId="1">Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                        <% }) %>

                                </div>
                            </div>
            </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="/public/dist/myBooks.bundle.js" type="module"></script>
</body>

</html>