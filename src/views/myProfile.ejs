<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        html, body {
            height: 100%;
            font-family: 'Arial', sans-serif;
            background-color: #f0f0f0;
        }

        header {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 10px 0;
        }

        main {
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .profile-info {
            display: flex;
            justify-content: space-around;
            align-items: center;
            width: 90%;
            max-width: 1000px;
            margin-bottom: 40px;
        }

        .profile-picture {
            width: 30%;
            max-width: 200px;
        }

        .profile-picture img {
            width: 100%;
            height: auto;
            border-radius: 50%;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .user-details {
            width: 70%;
            max-width: 600px;
            padding-left: 20px;
        }

        .user-details h2 {
            font-size: 2.5vw; /* Using vw for responsive font size */
            margin-bottom: 1.5vh; /* Using vh for spacing */
        }

        .user-details p {
            font-size: 1.8vw; /* Using vw for responsive font size */
            margin-bottom: 1vh; /* Using vh for spacing */
            color: #666;
        }

        .favorite-books, .liked-books {
            width: 90%;
            max-width: 1000px;
            margin-bottom: 5vh; /* Using vh for spacing */
        }

        .books-list {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
        }

        .book-item {
            width: 30%;
            max-width: 30vw; /* Using vw for responsive item width */
            margin: 3vh 0;
            padding: 4vh 2vw; /* Using vw and vh for padding */
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 2vw; /* Using vw for rounded corners */
            box-shadow: 0 2vh 4vh rgba(0, 0, 0, 0.1); /* Using vh for box shadow */
            transition: transform 0.3s ease;
        }

        .book-item:hover {
            transform: translateY(-1vh); /* Using vh for hover effect */
        }

        .book-item img {
            width: 100%;
            height: auto;
            border-radius: 2vw; /* Using vw for rounded corners */
        }

        .book-item h3 {
            font-size: 2vw; /* Using vw for responsive font size */
            margin-bottom: 1.5vh; /* Using vh for spacing */
        }

        .book-item p {
            font-size: 1.5vw; /* Using vw for responsive font size */
            color: #888;
            margin-bottom: 1vh; /* Using vh for spacing */
        }

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 2vh 0;
            margin-top: auto;
            width: 100%;
        }

        @media (max-width: 768px) {
            .profile-info {
                flex-direction: column;
                align-items: center;
            }

            .profile-picture {
                width: 50%;
                max-width: 150px;
            }

            .user-details {
                width: 90%;
                max-width: 600px;
                padding-left: 0;
                text-align: center;
            }

            .book-item {
                width: 45%;
                max-width: 40vw; /* Adjusted for smaller screens */
            }
        }
    </style>
</head>
<body>
    <header>
        <h1>User Profile</h1>
    </header>
    <main>
        <section class="profile-info">
            <div class="profile-picture">
                <img src="/public/appImages/artistBack.webp" alt="Profile Picture">
            </div>
            <div class="user-details">
                <h2>Username: <%= user.userName %></h2>
                <p>Email: <%= user.email %></p>
                <p>Number of Reviews: <%= user.reviews.length %></p>
                <p>Number of Followers: <%= user.followers.length %></p>
                <p>Number of Purchases: <%= user.purchases.length %></p>
            </div>
        </section>
        <section class="favorite-books">
            <h2>Favorite Books</h2>
            <div class="books-list">
                <% user.favourites.forEach(book => { %>
                    <div class="book-item">
                        <img src="/<%= book.imageLink %>" alt="<%= book.title %>">
                        <h3><%= book.title %></h3>
                        <p>Author(s): <%= book.authors.join(', ') %></p>
                    </div>
                <% }); %>
            </div>
        </section>
        <section class="liked-books">
            <h2>Liked Books</h2>
            <div class="books-list">
                <% user.likedBooks.forEach(book => { %>
                    <div class="book-item">
                        <img src="<%= book.imageLink%>" alt="<%= book.title %>">
                        <h3><%= book.title %></h3>
                        <% console.log(book.authors); %>
                        <p>Author(s): <%= book.authors %></p>
                    </div>
                <% }); %>
            </div>
        </section>
    </main>
    
</body>
</html>
